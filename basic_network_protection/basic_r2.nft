#!/usr/sbin/nft -f

flush table ip r2;

table ip r2 {
    chain forward {
        type filter hook forward priority 0; policy drop;
        iifname "r2-eth12" ip saddr 10.1.0.0/24 accept;
        ip daddr 10.12.0.10 tcp dport 80 accept;
        ip daddr 10.12.0.20 udp dport 5353 accept;
        ip daddr 10.12.0.30 udp dport 123 accept;
        ip daddr 10.12.0.40 tcp dport { 20, 21 } accept;
        ip protocol icmp icmp type echo-request ip daddr { 10.12.0.10, 10.12.0.20, 10.12.0.30, 10.12.0.40 } accept;
        ct state { established, related } accept;
    }
}
